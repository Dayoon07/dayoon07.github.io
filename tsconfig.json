{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",

    "strict": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "skipLibCheck": true,

    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "resolveJsonModule": true,

    "esModuleInterop": true
  },
  "include": ["src"]
}